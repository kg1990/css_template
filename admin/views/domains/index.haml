.container
  .row.clearfix
    .col-md-8.column
      %table.table
        %thead
          %tr
            %th
              \#
            %th
              domain
            %th
              checked
            %th
              can-use
            %th
              response
        %tbody
          -@domains.each do |domain|
            %tr
              %td
                #{domain.id}
              %td
                #{domain.domain}
              %td
                #{domain.checked}
              %td
                #{domain.can_use}
              %td
                #{domain.response}
    .col-md-4.column
      %a.btn.btn-lg.btn-block.btn-success{:href => "/admin/domains/do_make"} Make Check Domain
      %a.btn.btn-block.btn-success.btn-lg{:href => "/admin/domains/do_check"} Do Check
      %a.btn.btn-block.btn-success.btn-lg{:href => "/admin/domains/all_list"} All List
      %a.btn.btn-block.btn-success.btn-lg{:href => "/admin/domains/not_check"} Not Check List
      %a.btn.btn-block.btn-success.btn-lg{:href => "/admin/domains/download_can_use_list"} Download Can Use List
      %a.btn.btn-block.btn-success.btn-lg{:href => "/admin/domains/delete_all"} Delete All
